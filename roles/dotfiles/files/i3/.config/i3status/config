# Include dracula theme
# include ~/dracula-themes/i3/.config/i3status/config

general {
  output_format = "i3bar"
  colors = true
  color_good = "#50FA7B"
  color_degraded = "#F1FA8C"
  color_bad = "#FF5555"
}

order += "tztime local"
order += "load"
order += "memory"
order += "battery 0"

tztime local {
  format = "%Y-%m-%d %I:%M %p"
}

load {
  format = "%5min"
}

memory {
  format = "%used"
  threshold_degraded = "10%"
  format_degraded = "MEMORY: %free"
}

battery 0 {
  format = "%status %percentage %remaining %emptytime"
  format_down = "No battery"
  status_chr = " CHR"
  status_bat = " BAT"
  status_unk = "? UNK"
  status_full = " FULL"
  path = "/sys/class/power_supply/BAT&d/uevent"
  low_threshold = 10
}
